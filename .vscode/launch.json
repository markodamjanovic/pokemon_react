{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "name": "RUN",
            "request": "launch",
            "runtimeArgs": [
                "run", 
                "debug" 
            ],
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/server",
            "localRoot": ".",
            "skipFiles": [
                "<node_internals>/**",
                ".<node_internals>/**",
            ],
            "outputCapture": "std", 
            "preLaunchTask": "start-webpack",
            "postDebugTask": "terminate-all-tasks",
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 0
            }
        }
    ]
}